trait Value['a] {
    fn get_value(self: 'a) -> int
}

impl Value[int] {
    fn get_value(self: int) -> int {
        self
    }
}

trait Foo['a] {
    fn foo(self: 'a, a: bool) -> bool
}

impl Foo[int] {
    fn foo(self: int, a: bool) -> bool {
        true
    }
}

fn call_on_value(x: int) -> int {
    x.get_value()
}

fn call_on_ptr(p: *int) -> int {
    p.get_value()
}

fn main() {
    a = call_on_value(1)
    print(a)

    p = new(int, 1)
    *p = 3
    b = call_on_ptr(p)
    print(b)
}
