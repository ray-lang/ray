{
  "name": "ray-vscode",
  "displayName": "Ray LSP",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.84.0"
  },
  "icon": "./icons/logo_square.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/ray-lang/ray.git",
    "directory": "editors/vscode"
  },
  "contributes": {
    "languages": [
      {
        "id": "ray",
        "aliases": [
          "Ray"
        ],
        "extensions": [
          ".ray"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./icons/logo_black.svg",
          "dark": "./icons/logo_white.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "ray",
        "scopeName": "source.ray",
        "path": "./syntaxes/ray.tmLanguage.json"
      }
    ],
    "configuration": [
      {
        "title": "Ray",
        "properties": {
          "ray.toolchainPath": {
            "type": "string",
            "description": "Path to the Ray toolchain",
            "default": ""
          },
          "ray.cliPath": {
            "type": "string",
            "description": "Path to the Ray CLI used by the extension",
            "default": ""
          },
          "ray.serverArgs": {
            "type": "array",
            "description": "Additional arguments appended when launching the Ray LSP",
            "items": {
              "type": "string"
            },
            "default": []
          },
          "ray.extraEnv": {
            "type": "object",
            "description": "Extra environment variables injected when the server starts",
            "additionalProperties": {
              "type": "string"
            },
            "default": {}
          }
        }
      }
    ],
    "commands": [
      {
        "command": "ray-lsp.restartServer",
        "title": "Ray LSP: Restart Server"
      }
    ]
  },
  "main": "./out/extension.js",
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.84.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.4.0"
  }
}
