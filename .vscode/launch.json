    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'ray'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=ray",
                    "--package=ray"
                ],
                "filter": {
                    "name": "ray",
                    "kind": "bin"
                },
            },
            "args": [
                "--log-level",
                "debug",
                "build",
                "examples/scratch.ray"
            ],
            // "args": [
            //     "--log-level",
            //     "debug",
            //     "build",
            //     // "-K",
            //     "--no-core",
            //     "--print-ast",
            //     "examples/no_std.ray"
            // ],
            // "args": [
            //     "--log-level",
            //     "debug",
            //     "build",
            //     "--lib",
            //     "lib/core"
            // ],
            "env": {
                "RUST_BACKTRACE": "1"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'ray'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=ray",
                    "--package=ray"
                ],
                "filter": {
                    "name": "ray",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}
